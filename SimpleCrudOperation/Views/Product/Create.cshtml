@model SimpleCrudOperation.Models.Product
@{
    ViewData["Title"] = "Create";
}

<h1 class="alert alert-info">Create Product</h1>

<div class="container border p-5">

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="@Model.ProductName"></label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.ProductName" class="form-control" />
            </div>
            <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="@Model.UnitPrice"></label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.UnitPrice" class="form-control" />
            </div>
            <span asp-validation-for="@Model.UnitPrice" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="@Model.TotalQuantity"></label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.TotalQuantity" class="form-control" />
            </div>
            <span asp-validation-for="@Model.TotalQuantity" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Submit" class="form-control btn btn-success" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-primary form-control">Back</a>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-6 offset-3">
                <h2 class="text-success">@ViewBag.Success</h2>
            </div>   
        </div>

    </form>

</div>